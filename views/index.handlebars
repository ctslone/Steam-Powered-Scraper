<div data-_id="{{this._id}}" class="container-fluid">
    <div class="row justify-content-center">
        {{#each Games}}
        <div class="card col-lg-3 col-md-4 col-sm-12 ml-2 mb-2 mt-2">
            <img src="{{this.photo}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><a href="{{this.link}}">{{this.title}}</a></h5>
                <p class="card-text">{{this.tags}}</p>
                <a href="#" class="btn btn-primary">Save!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>